{
    "Experiment": "Test_exp0",
    "Exp_group":  "Test_series", 

    "ModelName":  "GraphSage_network",

    "epochs":     100,
    "batch_size": 512,
    "early_stop": true,
    "patience":   5,
    "learning_rate":   1e-4,
    "lr_schedule": "classic_schedule",
    "val_every":   100000,
    "verbose":     true,

    "hyper_params": {
        "n_out":           4,
        "encode_layers":   3,
        "decode_layers":   3,
        "hidden_states":   128,
        "dropout":         0.25,
        "batch_norm":      true
    },

    "Data":            "MuonGun",
    "GraphType":       "PCA_gen",
    "GraphParam":       6,
    "data_split":      [0.8, 0.1, 0.1],
    "clear_dataset":   false,
    "graph_batch":     10000,

    "raw_path":   "/home/johannbs/Desktop/IceCube_GNN/data/db_files/rasmus_classification_muon_3neutrino_3mio.db",

    "features":   ["dom_x", "dom_y", "dom_z", "time", "charge_log10"],
    "targets":    ["direction_x", "direction_y", "direction_z"],
    "event_lims": "pid = 13 limit 20000",
    "node_lims":  "SRTInIcePulses = 1", 

    "LossFunc":   "VonMises3D",
    "log_wandb": false,
    "metrics":   ["angle_u"]
}
   